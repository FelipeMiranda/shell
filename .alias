#!/bin/bash

OSTYPE=`uname`


#OPCOES COMUNS

alias ..='cd ..'
alias d='dig'
alias i='ifconfig | grep inet'
alias g='grep'
alias l='ls -lh'
alias m='more'
alias p='ps aux'
alias t='tail -f'
alias +x='chmod +x' 
alias cd..='cd ..'
alias cdh='cd ~/help/`uname`/help/'
alias cds='cd ~/shell'
alias vi='vim'
alias rm='rm -f'
alias rmdir='rm -rf'
alias la='ls -la'
alias lah='ls -lah'
alias dumax='du --max-depth=1 -h'
alias traduz='zzdicbabylon'
alias mq='mailq'
alias e0='ethstatus -i eth0 -s 10' # interface eth0 size throuput 10M
alias e1='ethstatus -i eth1 -s 10' # interface eth0 size throuput 10M




#PREGUICAS
alias shellinstall='~/shell/install.sh'
alias realce='~/shell/linux/realce.awk'
alias postudo='cd && cd mail-benchmark && postal -m 1000 -M 100 -t 3 localhost to-foobar.br'
alias postconsometudo='cd && cd mail-benchmark && rabid -p 10 localhost from-foobar.br'
alias postzerafila='postsuper -d all'
alias postflush='postqueue -f'
alias scr='screen'
alias miniman='~/shell/linux/miniman.sh'


#GIT ALIAS
alias sta='git status'
alias com='git commit -a'
alias ga='git add .'
alias pull='echo -e "\n\t ${alert}PULL${normal} xando\n\n\t ${green}LOCAL <- ${blue} WWW ${normal}\n" && git pull'
alias push='echo -e "\n\t ${alert}emPURRANDO${normal}\n\n\t ${green}LOCAL -> ${blue} WWW${normal}\n" && git push origin master'
alias clone='cd ~ && git clone git@github.com:quirinobytes/shell.git'



## CUSTOM ALIAS

## LINUX ALIAS
if [ $OSTYPE == "Linux" ]; then
alias n='netstat -antup'
alias ls='ls --color'
alias r='route -n'
alias grep='grep --color'
fi

## OPENBSD ALIAS
if [ $OSTYPE == "OpenBSD" ]; then
alias n='netstat -f inet -an'
alias r='route show'

#muito importante para nao setar errado caso nao tenha o programa colorls, senao vc nao vai ver nem um arquivo.
	if [ -e /usr/local/bin/colorls ]; then
	alias ls='colorls -G'
	fi

fi
