#!/bin/bash

OSTYPE=`uname`


#OPCOES COMUNS

alias ..='cd ..'
alias cd..='cd ..'
alias cds='cd ~/shell'
alias i='ifconfig'
alias p='ps aux'
alias +x='chmod +x' 
alias vi='vim'
alias rm='rm -f'
alias rmdir='rm -rf'
alias l='ls -l'
alias la='ls -la'
alias lah='ls -lah'
alias traduz='zzdicbabylon'






#CUSTOM ALIAS

#LINUX ALIAS
if [ $OSTYPE == "Linux" ]; then
alias n='netstat -antu'
alias ls='ls --color'
alias r='route -n'
fi



#OPENBSD ALIAS
if [ $OSTYPE == "OpenBSD" ]; then
alias n='netstat -f inet -an'
alias r='route show'
alias ls='colorls -G'
fi
