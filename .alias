#!/bin/bash

OSTYPE=`uname`


#OPCOES COMUNS

alias ..='cd ..'
alias cd..='cd ..'
alias cds='cd ~/shell'
alias i='ifconfig'
alias p='ps aux'
alias +x='chmod +x' 
alias vi='vim'
alias rm='rm -f'
alias rmdir='rm -rf'
alias l='ls -l'
alias la='ls -la'
alias lah='ls -lah'
alias traduz='zzdicbabylon'
alias g='grep'
alias mq='mailq'

alias shellinstall='~/shell/install.sh'

#GIT ALIAS
alias sta='git status'
alias com='git commit -a'
alias pull='git pull'
alias push='git push origin master'
alias clone='git clone git@github.com:quirinobytes/shell.git'





#CUSTOM ALIAS

#LINUX ALIAS
if [ $OSTYPE == "Linux" ]; then
alias n='netstat -antu'
alias ls='ls --color'
alias r='route -n'
alias grep='grep --color'
fi



#OPENBSD ALIAS
if [ $OSTYPE == "OpenBSD" ]; then
alias n='netstat -f inet -an'
alias r='route show'
alias ls='colorls -G'
fi
