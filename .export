#!/bin/bash

source ~/shell/colors.sh
CDSHELL="~/shell" # VARIAVEL QUE CONTEM O RAIZ DO CDSHELL <- (CONFIGURE)
OSTYPE=`uname`
PATH=$PATH:$CDSHELL/linux

HISTFILE=~/.bash_history
HISTSIZE=2000
VISUAL=vim
EDITOR=vim

#escapacoes \[\] para o PS1 funcionar: wrap line, backpacesem comer peda;os malucos kkkk
#
red="\[$red\]"
yellow="\[$yellow\]"
green="\[$green\]"
cyan="\[$cyan\]"
normal="\[$normal\]"
#
#
PS1="$red\u$yellow@$green\h $cyan\w> $normal"


#DEFAULT EXPORT (all OSes)
export HISTFILE HISTSIZE PS1 EDITOR VISUAL CDSHELL PATH


# CUSTOM EXPORT per OSes
if [ $OSTYPE == "OpenBSD" ]; then
PATH=$PATH:~/shell/openbsd
PKG_PATH=http://mirrors.unb.br/pub/OpenBSD/5.7/packages/i386/
export PKG_PATH CDSHELL PATH

fi
