[Unit]
After=network.service
Description= CDSHELL - AutoUpdate

[Service]
ExecStart=/root/shell/push/cdshelld.js $(/root/shell/linux/cdshell -V) > /dev/null
WorkingDirectory=/root/shell/push
Restart=always
RestartSec=50
StartLimitInterval=10
StartLimitBurst=10

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=CDSHELL AutoUpdate
User=root
Group=root
Environment=NODE_ENV=production PORT=3000 NODE_MODULES=/lib/node_modules

[Install]
WantedBy=multi-user.target
