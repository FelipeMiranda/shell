[Unit]
After=network.service
Description= CDSHELL - AutoUpdate

[Service]
ExecStart=/usr/bin/node cdshelld.js > /dev/null
WorkingDirectory=/root/shell/push
Restart=always
RestartSec=500ms
StartLimitInterval=500ms
StartLimitBurst=5000

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=CDSHELL[Systemd AutoUpdate Service]
User=root
Group=wheel
Environment=NODE_ENV=production PORT=3000 NODE_MODULES=/lib/node_modules

[Install]
WantedBy=multi-user.target
